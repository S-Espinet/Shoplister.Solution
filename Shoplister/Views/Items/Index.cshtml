@{
  Layout = "_Layout";
}

@using Shoplister.Models;
@model IEnumerable<Shoplister.Models.Item>

@if (Model.Any())
{
  <h1>Unchecked Items for: @User.Identity.Name</h1>
  @using (Html.BeginForm())
  {
  <ul>
    @foreach (Item item in Model)
    {
      @if (item.Checked == false)
      {
        <li>
          @Html.HiddenFor(x => item.ItemId)
          @Html.DisplayFor(x => item.ItemName)
          @Html.DisplayFor(x => item.Notes)
          @Html.CheckBoxFor(x => item.Checked)
        </li>
      }
    }
  </ul>
  <h1>Checked Items:</h1>
  <ul>
    @foreach (Item item in Model)
    {
      @if (item.Checked == true)
      {
        <li>
          @Html.HiddenFor(x => item.ItemId)
          @Html.DisplayFor(x => item.ItemName)
          @Html.CheckBoxFor(x => item.Checked)
        </li>
      }
    }
  </ul>
  <input type="submit" value="Save" />
  }
}
else
{
  <h3>No items have been added yet!</h3>
}

<p>@Html.ActionLink("Add New Item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>


