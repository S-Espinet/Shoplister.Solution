@{
  Layout = "_Layout";
}

@model Shoplister.Models.Item

<h2>Edit</h2>
<hr>

@using (Html.BeginForm())
{
  <div class="container-form">
    @Html.HiddenFor(model => model.ItemId)
    @Html.LabelFor(model => model.ItemName):
    @Html.EditorFor(model => model.ItemName, new {require = "required"})
    @Html.LabelFor(model => model.Notes):
    @Html.EditorFor(model => model.Notes)
  </div>
  <br>
  <br>
  <input style="color: blue" type="submit" class="btn btn-success" value="Save" />
  <br>
  <br>
}
<div class="button-div">
  <button class="btn btn-success">@Html.ActionLink("Assign a Store", "AddStore", new { id = Model.ItemId })</button>
  <br>
  <br>
  <button style="color: black" class="btn btn-danger">@Html.ActionLink("Delete Item", "Delete", new { id = Model.ItemId })</button>
</div>