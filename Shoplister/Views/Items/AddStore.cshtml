@{
  Layout = "_Layout";
}

@model Shoplister.Models.Item

<h2>Assign a Store For: @Html.DisplayFor(model => model.ItemName)</h2>
<hr />

@using (Html.BeginForm())
{
  <div class="container-form">
    @Html.HiddenFor(model => model.ItemId)
    @Html.Label("Select Store"):  
    @Html.DropDownList("StoreId")
    <br>
    <br>
</div>  

  <input style="color: blue" type="submit" class="btn btn-success" value="Save" />
}