@{
  Layout = "_Layout";
}

@model Shoplister.Models.Item

<h2>Assign a Store For: &nbsp; @Html.DisplayFor(model => model.ItemName)</h2>
<hr />

@using (Html.BeginForm())
{
  <div class="container-form">
    @Html.HiddenFor(model => model.ItemId)
    @Html.Label("Select Store"): &nbsp;
    @Html.DropDownList("StoreId")
    <br>
    <br>
</div>  

  <div class="button-div">
    <input style="color: blue; font-size: 1.2em;" type="submit" class="btn btn-success" value="Save" />
  </div>
}